<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.wso2.carbon.uuf.sample</groupId>
    <artifactId>org.wso2.carbon.uuf.sample.pets-store.feature</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>carbon-feature</packaging>

    <name>WSO2 UUF Sample - App - Pets Store App</name>
    <url>http://wso2.org</url>

    <parent>
        <groupId>org.wso2.carbon.uuf.sample</groupId>
        <artifactId>sample-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <dependencies>
        <!--UUF Components-->
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.foundation.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.store-common.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.simple-auth.ui</artifactId>
            <type>zip</type>
            <classifier>uuf-component</classifier>
        </dependency>
        <!--UUF Themes-->
        <dependency>
            <groupId>org.wso2.carbon.uuf.common</groupId>
            <artifactId>org.wso2.carbon.uuf.common.default.theme</artifactId>
            <type>zip</type>
            <classifier>uuf-theme</classifier>
        </dependency>
        <!--Backend dependencies-->
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.pets-store.bundle</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf.sample</groupId>
            <artifactId>org.wso2.carbon.uuf.sample.api</artifactId>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.carbon.uuf.maven</groupId>
                <artifactId>carbon-uuf-maven-plugin</artifactId>
                <version>${carbon-uuf-maven-plugin.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>create</id>
                        <phase>package</phase>
                        <goals>
                            <goal>create-app</goal>
                        </goals>
                        <configuration>
                            <instructions>
                                <Import-Package>
                                    org.wso2.carbon.uuf.sample.simpleauth.bundle,
                                    org.wso2.carbon.uuf.sample.api
                                </Import-Package>
                            </instructions>
                            <!--All backend dependencies should be specified here-->
                            <bundles>
                                <bundle>
                                    <symbolicName>org.wso2.carbon.uuf.sample.pets-store.bundle</symbolicName>
                                    <version>${carbon.uuf.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.wso2.carbon.uuf.sample.api</symbolicName>
                                    <version>${carbon.uuf.version}</version>
                                </bundle>
                            </bundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
